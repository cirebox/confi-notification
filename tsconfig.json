{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "lib": ["ES2022", "DOM"],
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowJs": false,
    "noEmit": true,
    "jsx": "react-jsx",
    "paths": {
      "/imports/*": ["./imports/*"],
      "/server/*": ["./server/*"],
      "/client/*": ["./client/*"]
    }
  },
  "include": [
    "imports/**/*",
    "server/**/*",
    "client/**/*",
    "tests/**/*"
  ],
  "exclude": [
    "node_modules",
    ".meteor"
  ]
}
